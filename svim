#!/bin/bash
export NVIM_LISTEN_ADDRESS=/tmp/nvimsocket
SVIM="ON"
if [ ! $(pgrep nvim) ]
     then 
	     if [ -z "$@" ] ; then
			alacritty -e nvim -u ~/.config/nvim/restore.vim
		else
	     		alacritty -e nvr "$@"
	    		echo "no serverlist"
		fi
     else
	     nvr --remote "$@"
	     echo "server is running"
fi
